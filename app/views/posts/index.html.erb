<p id="notice"><%= notice %></p>

<h1 class="text-center text-warning" >All Posts</h1>

<!--<%#= link_to 'New Post', new_post_path %>-->

<div class="row">
  <% @posts.each do |post| %>
  <div class="col-xs-12 col-sm-4 col-md-4 col-md-offset-4 col-sm-offset-4">
    <div class="thumbnail">
      <h4 class="text-primary" style="padding-left: 20px"><small style="color: black">Posted by</small> <%= post.user.email %></h4>
      <%= link_to (image_tag post.image.url(:medium)), post %>
      <div class="caption">
        <h4 class="text-primary"><!--<%= post.user.email %>-->  <small style="color: black"><%= post.caption %></small></h4>
        <p>
        <% if post.user == current_user %>
          <p><%= link_to 'Edit', edit_post_path(post) %> | 
             <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
